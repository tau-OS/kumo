x11-window-title=Miriway
add-wayland-extensions=all
idle-timeout=600
app-env-amend=XDG_SESSION_TYPE=wayland:GTK_USE_PORTAL=0:XDG_CURRENT_DESKTOP=KIRI:GTK_A11Y=none
ctrl-alt=t:alacritty
shell-component=systemd-run --user --scope --slice=background.slice miriway-background /usr/share/backgrounds/ultramarine-linux/preview/blueprint.png

shell-component=systemd-run --user --scope --slice=session.slice shizukud
shell-component=systemd-run --user --scope --slice=session.slice kumo
cursor-theme=Hydrogen

shell-ctrl-alt=l:loginctl lock-session
lockscreen-app=swaylock -i /usr/share/backgrounds/default.png

meta=Left:@dock-left
meta=Right:@dock-right
meta=Space:@toggle-maximized
meta=Home:@workspace-begin
meta=End:@workspace-end
meta=Page_Up:@workspace-up
meta=Page_Down:@workspace-down
ctrl-alt=BackSpace:@exit
